# {{serviceName}} Configuration
NODE_ENV=development
PORT={{port}}
LOG_LEVEL=info

# Database Configuration
DB_HOST={{dbHost}}
DB_PORT={{dbPort}}
DB_NAME={{dbName}}
DB_USER={{dbUser}}
DB_PASSWORD={{dbPassword}}

{{#if includeRedis}}
# Redis Configuration
REDIS_HOST={{redisHost}}
REDIS_PORT=6379
{{else}}
# Redis Configuration (disabled)
# REDIS_HOST=redis
# REDIS_PORT=6379
{{/if}}

{{#if additionalEnv}}
# Additional Environment Variables
{{#each additionalEnv}}
{{this}}
{{/each}}
{{/if}}